@model RegistrationViewModel
@section Style
{
    <link rel="stylesheet" href="~/css/loginReg.css?v=1">
}

<div class="loginpage">
    <div class="pglogblock">
        <div class="pginfo">
            <div class="pglogin">Login</div>
        </div>
        <form action="/User/Login" method="post" class="loginformstyle1">
            @Html.HiddenFor(x => x.ReturnUrl)
            <ul class="noBullet">
                <li>
                    <label for="username"></label>
                    <input name="@nameof(RegistrationViewModel.Login)" class="inputFields" type="text" placeholder="Login" />
                </li>
                <li>
                    <label for="password"></label>
                    <input name="@nameof(RegistrationViewModel.Password)" class="inputFields" type="password" placeholder="Password" />
                </li>
                <li>
                    <input class="pglogbut" type="submit" value="Log in" />
                </li>
            </ul>
        </form>
    </div>
</div>